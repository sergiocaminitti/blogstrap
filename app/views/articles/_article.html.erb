<article class="blog-post mb-3">
  <h2 class="display-5 link-body-emphasis mb-1"><%= article.title %></h2>
  <p class="blog-post-meta"><%= month_day_comma_year(article.created_at) %> by <%= article.user.email%>
    <P><%= truncate( article.body, length: 150 )%></P>
    <p> <%= link_to 'Continue readding ...', article, class: 'btn btn-link'%> </p>
    <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-secondary'%>
    <%# Usanod o javascript nÃ£o intrusivo %>
    <%= link_to 'Destroy', article_path(article),
    method: :delete,
    data: { confirm: 'Are you sure?' },
    class: 'btn btn-danger' %>
  </article>
