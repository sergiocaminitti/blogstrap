<h1>Categories</h1>
<p>
  <%= link_to "New category", new_category_path,
      class: "btn btn-success" if policy(:category).new? %>
</p>
<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td>
          <%= category.name %>
        </td>
        <td>
          <%= link_to "Edit", edit_category_path(category),
              class: 'btn btn-primary' if policy(category).edit? %>
          <%= link_to "Destroy", category_path(category), method: :delete, data: { confirm: "Are you sure?" },
              class: 'btn btn-danger' if policy(category).destroy? %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
