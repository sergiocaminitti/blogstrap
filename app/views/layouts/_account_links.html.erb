<% if user_signed_in? %>
  <div class="link-body-emphasis p-2" >
    <%= link_to "#{current_user.email}", edit_user_registration_path, class:'link-secondary' %>
    <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-sm btn-outline-secondary' %>
  </div>
<% else %>
  <%= link_to t('app.menu.sign_in'), new_user_session_path, class: 'link-secondary' %>&nbsp;&nbsp;
  <%= link_to t('app.menu.sign_up'), new_user_registration_path, class: 'btn btn-sm btn-outline-secondary' %>
<% end%>
